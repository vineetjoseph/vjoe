import random
import os
import time
print("Character Builder")
print("")
Legend = input("Name your Legend > ")
Character = input("What is your Character type (Human, Elf, Wizard, Orc) > ")
print("")
time.sleep(1)
os.system("clear")

def dice(number):
  dice = int(random.randint(1, number))
  return dice
dice1 = dice(6)
dice2 = dice(8)
health = (dice1 * dice2)/2 + 10
strength = (dice1 * dice2)/2 + 12
print(Legend)
print("Health: ", health)
print("Strength: ", strength)
print("")
print("May your name go down in Legend...")
print("")

newChar = input("would you like to create another character? >")
while newChar == "yes" or "Yes":
  time.sleep(1)
  os.system("clear")
  print("Character Builder")
  print("")
  Legend = input("Name your Legend > ")
  Character = input("What is your Character type (Human, Elf, Wizard, Orc) > ")
  print("")
  time.sleep(1)
  os.system("clear")
  
  def dice(number):
    dice = int(random.randint(1, number))
    return dice
  dice1 = dice(6)
  dice2 = dice(8)
  health = (dice1 * dice2)/2 + 10
  strength = (dice1 * dice2)/2 + 12
  print(Legend)
  print("Health: ", health)
  print("Strength: ", strength)
  print("")
  print("May your name go down in Legend...")
  break
